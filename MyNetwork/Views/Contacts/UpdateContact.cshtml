@model IEnumerable<MyNetwork.Models.Contact>
<style>
    .profile-left {
        padding-left: 0;
        float: left;
        width: 35%;
        height: 100%;
        position: relative;
        background-color: #F8F8F8;
    }
</style>

<!-- MAIN -->
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div>
            <div class="panel panel-profile">
                <div class="clearfix">
                    <!-- LEFT COLUMN -->
                    <div class="profile-left">
                        <!-- PROFILE HEADER -->
                        <div class="profile-header">
                            <div class="overlay"></div>
                            <div class="profile-main">
                                <img src="assets/img/user-medium.png" class="img-circle" alt="Avatar">
                                <h3 class="name">@ViewBag.FirstName @ViewBag.LastName </h3>

                            </div>
                            <div class="profile-stat">
                                <div class="row">
                                    <div class="col-md-4 stat-item">
                                        3 yrs <span>Years Known</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        1/2/2019 <span>Last Spoken</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        Tech <span>Industry</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        Associate <span>Category</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        25-30 <span>Age</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        Hawks Game <span>Met Location</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END PROFILE HEADER -->
                        <br />
                        <div class="text-center"><a href="#" class="btn btn-primary">Edit Profile</a></div>
                        <!-- PROFILE DETAIL -->
                        <div class="profile-detail">
                            <div class="profile-info">
                                <h4 class="heading">Basic Info</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Birthdate <span>@ViewBag.Birthday</span></li>
                                    <li>Primary Phone <span>{item.Phone}</span></li>
                                    <li>Secondary Phone <span>{item.Phone}</span></li>
                                    <li>Email <span>{item.Email}</span></li>
                                    <li>Occupation <span>{item.Occupation}</span></li>
                                    <li>Website <span><a href="https://www.themeineed.com">{item.WebsiteURL}</a></span></li>
                                    <li>Rating <span>{item.Rating}</span></li>
                                </ul>
                            </div>


                            <div class="profile-info">
                                <h4 class="heading">Social</h4>
                                <ul class="list-inline social-icons">
                                    <li><a href="#" class="facebook-bg"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#" class="twitter-bg"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#" class="google-plus-bg"><i class="fa fa-google-plus"></i></a></li>
                                    <li><a href="#" class="github-bg"><i class="fa fa-github"></i></a></li>
                                </ul>
                            </div>


                            <div class="profile-info">
                                <h4 class="heading">Personal</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Birthdate <span>{item.Birthdy}</span></li>
                                    <li>Primary Phone <span>{item.Phone}</span></li>
                                    <li>Secondary Phone <span>{item.Phone}</span></li>
                                    <li>Email <span>{item.Email}</span></li>
                                    <li>Occupation <span>{item.Occupation}</span></li>
                                    <li>Website <span><a href="https://www.themeineed.com">{item.WebsiteURL}</a></span></li>
                                </ul>
                            </div>

                            <div class="profile-info">
                                <h4 class="heading">Education</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Birthdate <span>{item.Birthdy}</span></li>
                                    <li>Primary Phone <span>{item.Phone}</span></li>
                                    <li>Secondary Phone <span>{item.Phone}</span></li>
                                    <li>Email <span>{item.Email}</span></li>
                                    <li>Occupation <span>{item.Occupation}</span></li>
                                    <li>Website <span><a href="https://www.themeineed.com">{item.WebsiteURL}</a></span></li>
                                </ul>
                            </div>

                            <div class="profile-info">
                                <h4 class="heading">Family</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Birthdate <span>{item.Birthdy}</span></li>
                                    <li>Primary Phone <span>{item.Phone}</span></li>
                                    <li>Secondary Phone <span>{item.Phone}</span></li>
                                    <li>Email <span>{item.Email}</span></li>
                                    <li>Occupation <span>{item.Occupation}</span></li>
                                    <li>Website <span><a href="https://www.themeineed.com">{item.WebsiteURL}</a></span></li>
                                </ul>
                            </div>

                        </div>
                        <!-- END PROFILE DETAIL -->
                    </div>
                    <!-- END LEFT COLUMN -->
                    <!-- RIGHT COLUMN -->
                    <div class="profile-right">
                        <h4 class="heading">Groups</h4>
                        <!-- AWARDS -->
                        <div class="awards">
                            <div class="row">
                                <div class="col-md-3 col-sm-6">
                                    <div class="award-item">
                                        <div class="hexagon">
                                            <span class="lnr lnr-sun award-icon"></span>
                                        </div>
                                        <span>Most Bright Idea</span>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="award-item">
                                        <div class="hexagon">
                                            <span class="lnr lnr-clock award-icon"></span>
                                        </div>
                                        <span>Most On-Time</span>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="award-item">
                                        <div class="hexagon">
                                            <span class="lnr lnr-magic-wand award-icon"></span>
                                        </div>
                                        <span>Problem Solver</span>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="award-item">
                                        <div class="hexagon">
                                            <span class="lnr lnr-heart award-icon"></span>
                                        </div>
                                        <span>Most Loved</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- END AWARDS -->
                        <!-- TABBED CONTENT -->

                        <div class="profile-detail">

                            <div class="profile-info">
                                <h4 class="heading">Notes</h4>
                                <textarea rows="10" cols="135" name="notes">

                                </textarea>
                            </div>

                            <div class="profile-info">
                                <h4 class="heading">Notifications</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Notify me if last contacted was more that a month:  <span>{item.Birthdy}</span></li>
                                    <li>Notify me my contacts birthdays:  <span>{item.Phone}</span></li>
                                    <li>Notify me suggestions to build my network:  <span>{item.Phone}</span></li>
                                    <li>Notify me to follow up on:  <span>{Date}</span></li>

                                </ul>
                            </div>
                        </div>


                        <!-- END TABBED CONTENT -->
                    </div>
                    <!-- END RIGHT COLUMN -->
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->
</div>
<!-- END MAIN -->
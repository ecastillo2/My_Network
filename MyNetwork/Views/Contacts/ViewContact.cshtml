                            <li>Occupation <span>{item.Occupation}</span></li>
                            <li>Website <span><a href="https://www.themeineed.com">{item.WebsiteURL}</a></span></li>
                        </ul>
                    </div>*@

                                </div>
                                <!-- END PROFILE DETAIL -->
                            </div>
                            <!-- END LEFT COLUMN -->
                            <!-- RIGHT COLUMN -->

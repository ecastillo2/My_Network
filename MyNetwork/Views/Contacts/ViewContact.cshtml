@*@using MyNetwork.Models;*@
<style>
    .profile-left {
        padding-left: 0;
        float: left;
        width: 35%;
        height: 100%;
        position: relative;
        background-color: #F8F8F8;
    }
</style>

<!-- MAIN -->
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div>
            <div class="panel panel-profile">
                <div class="clearfix">
                    <!-- LEFT COLUMN -->
                    <div class="profile-left">
                        <!-- PROFILE HEADER -->
                        <div class="profile-header">
                            <div class="overlay"></div>
                            <div class="profile-main">
                                <img src="assets/img/user-medium.png" class="img-circle" alt="Avatar">
                                <h3 class="name">@ViewBag.FirstName @ViewBag.LastName </h3>

                            </div>
                            <div class="profile-stat">
                                <div class="row">
                                    <div class="col-md-4 stat-item">
                                        3 yrs <span>Years Known</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        1/2/2019 <span>Last Spoken</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        Tech <span>Industry</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        Associate <span>Category</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        25-30 <span>Age</span>
                                    </div>
                                    <div class="col-md-4 stat-item">
                                        Hawks Game <span>Met Location</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END PROFILE HEADER -->
                        <br />
                        @using (Html.BeginForm("UploadImage", "Contacts", FormMethod.Post))
                        {
                        
                          <input type="file" value="" >
                     
                                }
                                <br />
                                <div class="text-center"><a href="#" class="btn btn-primary">Edit Profile</a></div>
                                <!-- PROFILE DETAIL -->
                                <div class="profile-detail">
                                    <div class="profile-info">
                                        <h4 class="heading">Basic Info</h4>
                                        <ul class="list-unstyled list-justify">
                                            <li>Birthdate <span>@ViewBag.Birthday</span></li>
                                            <li>Primary Phone <span>@ViewBag.PrimaryPhone</span></li>
                                            <li>Secondary Phone <span>@ViewBag.SecondaryPhone</span></li>
                                            <li>Email <span>@ViewBag.Email</span></li>
                                            <li>Occupation <span>@ViewBag.Occupation</span></li>
                                            <li>Married <span>@ViewBag.Married</span></li>
                                            <li>Website <span><a href="https://www.themeineed.com">@ViewBag.Website</a></span></li>
                                            <li>Rating <span>@ViewBag.Rating</span></li>
                                        </ul>
                                    </div>


                                    <div class="profile-info">
                                        <h4 class="heading">Social</h4>
                                        <ul class="list-inline social-icons">
                                            <li><a href=@ViewBag.FacebookURL class="facebook-bg"><i class="fa fa-facebook"></i></a></li>
                                            <li><a href=@ViewBag.TwitterURL class="twitter-bg"><i class="fa fa-twitter"></i></a></li>
                                            <li><a href=@ViewBag.InstagramURL class="google-plus-bg"><i class="fa fa-instagram"></i></a></li>

                                        </ul>
                                    </div>


                                    <div class="profile-info">
                                        <h4 class="heading">Personal</h4>
                                        <ul class="list-unstyled list-justify">
                                            <li>Met Location <span>@ViewBag.MetLocation</span></li>
                                            <li>Number of Year Known <span>@ViewBag.NumberOfYearKnown</span></li>
                                            <li>Last Spoken to <span>@ViewBag.LastSpokeToDate</span></li>
                                            <li>Personality <span>@ViewBag.Personality</span></li>
                                            <li>Relationship Status <span>@ViewBag.RelationshipStatus</span></li>

                                        </ul>
                                    </div>

                                    <div class="profile-info">
                                        <h4 class="heading">Education</h4>
                                        <ul class="list-unstyled list-justify">
                                            <li>In School <span>@ViewBag.InSchool</span></li>
                                            <li>College Attended <span>@ViewBag.CollegeAttended</span></li>
                                            <li>HighSchool Attened <span>@ViewBag.HighSchoolAttened</span></li>
                                            <li>Degree <span>@ViewBag.Degree</span></li>
                                            <li>Personality <span>@ViewBag.Personality</span></li>

                                        </ul>
                                    </div>

                                    @*<div class="profile-info">
                        <h4 class="heading">Family</h4>
